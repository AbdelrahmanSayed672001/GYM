<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".updateUser">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="417dp"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/image_5" />

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="508dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.983">

        <EditText
            android:id="@+id/idUpdateUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ID"
            android:inputType="textPersonName"
            android:textColor="#ffff8800"
            android:textColorHint="#ffff8800" />

        <EditText
            android:id="@+id/nameUpdateUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="#ffff8800"
            android:textColorHint="#ffff8800" />

        <EditText
            android:id="@+id/passwordUpdateUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#ffff8800"
            android:textColorHint="#ffff8800" />

        <EditText
            android:id="@+id/ageUpdateUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Age"
            android:inputType="textPersonName"
            android:textColor="#ffff8800"
            android:textColorHint="#ffff8800" />

        <Button
            android:id="@+id/updateUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update user" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>